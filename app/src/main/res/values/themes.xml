<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Cores principais - Glassmorphism com roxo-azulado -->
    <color name="primary_purple">#6C63FF</color>
    <color name="primary_blue">#3A8DFF</color>
    <color name="glass_white">#FFFFFF</color>
    <color name="glass_white_translucent">#80FFFFFF</color>
    <color name="glass_black_translucent">#30000000</color>
    <color name="glass_dark_translucent">#40000000</color>

    <!-- Tema Claro com Glassmorphism -->
    <style name="Theme.Appfinanceiro" parent="Theme.Material3.Light.NoActionBar">
        <!-- Cores primárias -->
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorOnPrimary">@color/glass_white</item>
        <item name="colorPrimaryContainer">@color/glass_white_translucent</item>
        <item name="colorOnPrimaryContainer">@android:color/black</item>

        <!-- Cores secundárias -->
        <item name="colorSecondary">@color/primary_blue</item>
        <item name="colorOnSecondary">@color/glass_white</item>
        <item name="colorSecondaryContainer">@color/glass_white_translucent</item>
        <item name="colorOnSecondaryContainer">@android:color/black</item>

        <!-- Cores de superfície com glassmorphism -->
        <item name="colorSurface">@color/glass_white_translucent</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="colorSurfaceVariant">@color/glass_white_translucent</item>
        <item name="colorOnSurfaceVariant">@android:color/black</item>

        <!-- Cores de background -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/white</item>

        <!-- Cores de erro -->
        <item name="colorError">@android:color/holo_red_dark</item>
        <item name="colorOnError">@color/glass_white</item>

        <!-- Outros -->
        <item name="colorOutline">@color/glass_white_translucent</item>

        <!-- Estilo de status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Estilo de navigation bar -->
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- Tema Escuro com Glassmorphism -->
    <style name="Theme.Appfinanceiro.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Cores primárias -->
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorOnPrimary">@color/glass_white</item>
        <item name="colorPrimaryContainer">@color/glass_dark_translucent</item>
        <item name="colorOnPrimaryContainer">@color/glass_white</item>

        <!-- Cores secundárias -->
        <item name="colorSecondary">@color/primary_blue</item>
        <item name="colorOnSecondary">@color/glass_white</item>
        <item name="colorSecondaryContainer">@color/glass_dark_translucent</item>
        <item name="colorOnSecondaryContainer">@color/glass_white</item>

        <!-- Cores de superfície com glassmorphism -->
        <item name="colorSurface">@color/glass_dark_translucent</item>
        <item name="colorOnSurface">@color/glass_white</item>
        <item name="colorSurfaceVariant">@color/glass_dark_translucent</item>
        <item name="colorOnSurfaceVariant">@color/glass_white</item>

        <!-- Cores de background -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/black</item>

        <!-- Cores de erro -->
        <item name="colorError">@android:color/holo_red_light</item>
        <item name="colorOnError">@color/glass_white</item>

        <!-- Outros -->
        <item name="colorOutline">@color/glass_dark_translucent</item>

        <!-- Estilo de status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Estilo de navigation bar -->
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Tema para componentes Glass -->
    <style name="Theme.Appfinanceiro.Glass">
        <item name="android:background">@color/glass_white_translucent</item>
        <item name="android:foreground">@android:color/transparent</item>
    </style>

    <!-- Estilo para Cards de Vidro -->
    <style name="GlassCard">
        <item name="android:background">@drawable/glass_card_background</item>
        <item name="android:elevation">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/glass_white_translucent</item>
    </style>

    <!-- Estilo para Botões com Glassmorphism -->
    <style name="GlassButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/glass_button_background</item>
        <item name="android:textColor">@color/primary_purple</item>
        <item name="android:elevation">4dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Estilo para TextInput com Glassmorphism -->
    <style name="GlassTextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/glass_white_translucent</item>
        <item name="boxStrokeColor">@color/primary_purple</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

</resources>
